[appdefaults]
        encrypt = yes 

[libdefaults]
	default_realm = ALLIEDTESTING.COM
	kdc_timesync = 1
	ccache_type = 4
	forwardable = true
	proxiable = true
	fcc-mit-ticketflags = true
	dns_lookup_kdc = true
        dns_lookup_realm = true
        ticket_lifetime = 24h
        renew_lifetime = 7d
        rdns = false
        forwardable = yes
        clockskew = 300
        v4_instance_resolve = false
	default_tgs_enctypes = aes256-cts-hmac-sha1-96 rc4-hmac
        default_tkt_enctypes = aes256-cts-hmac-sha1-96 rc4-hmac
        permitted_enctypes = aes256-cts-hmac-sha1-96 rc4-hmac
        v4_name_convert = {
                host = {
                        rcmd = host
                        ftp = ftp
                }
                        plain = {
			something = something-else
		}
        }

[realms]
	ALLIEDTESTING.COM = {
		kdc = dc3a.alliedtesting.com
		kdc = dc3b.alliedtesting.com
		admin_server = dc3a.alliedtesting.com
		default_domain = ALLIEDTESTING.COM
	}
	
[domain_realm]
	.alliedtesting.com = ALLIEDTESTING.COM
	alliedtesting.com = ALLIEDTESTING.COM 

[login]
	krb4_convert = false
	krb4_get_tickets = false

